#!/bin/bash

#simple script that sets up the appropriate folders for the data from the state_image_writer and sniper_geo_locator ROS nodes

#Jesse Wynn AUVSI '17

cd ~/Desktop && rm -rf vision_files/
mkdir vision_files
cd vision_files
mkdir all_images all_state_files target_images_sorted target_locations_sorted
cp ~/Desktop/sniper_geo_locator_instructions.jpg ~/Desktop/vision_files/all_images/sniper_geo_locator_instructions.jpg
cd target_images_sorted
mkdir target_1 target_2 target_3 target_4 target_5 target_6 target_7 target_8
mkdir target_9 target_10 target_11 target_12 target_13 target_14 target_15 target_16
mkdir target_17 target_18 target_19 target_20 target_21 target_22 target_23 target_24

echo File system setup complete!
